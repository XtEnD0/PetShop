<Page x:Class="PetShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center">
        <StackPanel>
            <Label Content="ЛОГИН:"></Label>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="ПАРОЛЬ:"></Label>
            
            <PasswordBox x:Name="PasswordBox"></PasswordBox>
            <Image x:Name="CaptchaImage" Width="150" Height="150" Margin="0,10,0,0" Visibility="Collapsed"></Image>
            <TextBox x:Name="CaptchaInput" Margin="0,10,0,0" Visibility="Collapsed"></TextBox>
            <Button x:Name="LoginButton"
                    Content="ВОЙТИ" Click ="LoginButton_Click"></Button>
            <Button x:Name="GuestButton"
                    Content="ГОСТЬ" Click="GuestButton_Click"></Button>
            


        </StackPanel>
        
    </Grid>
</Page>
