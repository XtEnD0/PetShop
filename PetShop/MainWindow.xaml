<Window x:Class="PetShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="ИС Товары для животных"
        Height="650" Width="1000"
        MinHeight="650" MinWidth="1000"
        MaxHeight="800" MaxWidth="1150"
        WindowStartupLocation="CenterScreen"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF76E383">
            <Image Source="/Resources/logo.png" 
                   HorizontalAlignment="Left"
                   Margin="230, 0, 0, 0"/>
            <TextBlock Text="Товары для животных"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="32"></TextBlock>
            </Grid>
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"></Frame>
        
    </Grid>
</Window>
